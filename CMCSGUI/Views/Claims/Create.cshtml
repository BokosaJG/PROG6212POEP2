@model CMCSGUI.Models.Claim
@{ ViewData["Title"] = "Submit Claim"; }
<h1>Submit Claim</h1>

@if(TempData["Message"] != null) {
    <div class="alert alert-success">@TempData["Message"]</div>
}

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Lecturer Name</label>
        <input asp-for="LecturerName" class="form-control" />
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Hours Worked</label>
            <input asp-for="HoursWorked" class="form-control" type="number" step="0.01" />
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Hourly Rate</label>
            <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" />
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label">Notes</label>
        <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Supporting Document (.pdf .docx .xlsx .doc) - max 5MB</label>
        <input asp-for="SupportingDocumentPath" type="file" name="supportingDocument" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit Claim</button>
</form>
